<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.visitor.FormInput">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tollbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back"/>


    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tollbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="VISITOR APPS"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView"
        android:paddingStart="25dp"
        android:paddingEnd="25dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FORM VISITOR IN"
            android:textSize="49dp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginBottom="40dp"
            android:textColor="@color/colorH1"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="208dp"
                android:id="@+id/label1"
                android:layout_height="55dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingVertical="15dp"
                android:textSize="16dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/radius_label"
                android:text="No ID Visitor"/>
            <EditText
                android:paddingLeft="5dp"
                android:id="@+id/id_visitor"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/radius_field"
                android:layout_toRightOf="@id/label1"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="31dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="208dp"
                android:id="@+id/label1"
                android:layout_height="55dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingVertical="15dp"
                android:textSize="16dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/radius_label"
                android:text="Nama Lengkap"/>
            <EditText
                android:paddingLeft="5dp"
                android:id="@+id/nama_lengkap"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/radius_field"
                android:layout_toRightOf="@id/label1"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="31dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="208dp"
                android:id="@+id/label1"
                android:layout_height="55dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingVertical="15dp"
                android:textSize="16dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/radius_label"
                android:text="Instansi/Universitas"/>
            <EditText
                android:paddingLeft="5dp"
                android:id="@+id/instansi"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/radius_field"
                android:layout_toRightOf="@id/label1"
                />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="31dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="208dp"
                android:id="@+id/label1"
                android:layout_height="55dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingVertical="15dp"
                android:textSize="16dp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/radius_label"
                android:text="Keperluan"/>
            <EditText
                android:paddingLeft="5dp"
                android:id="@+id/keperluan"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_alignParentTop="true"
                android:background="@drawable/radius_field"
                android:layout_toRightOf="@id/label1"
                />
        </RelativeLayout>
        <TextView
            android:layout_marginTop="11dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tanda Tangan"
            android:textSize="15dp"/>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/style_edittext"
            android:orientation="vertical" />
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingStart="25dp"
        android:paddingEnd="25dp">
        <Button
            android:id="@+id/hapus_ttd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hapus TTD"
            android:textColor="@color/colorWhite"
            android:layout_weight="1"
            android:background="@drawable/button_bg_rounded_corners"/>
        <LinearLayout
            android:layout_width="70dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="submit"
            android:layout_weight="1"
            android:textColor="@color/colorWhite"
            android:background="@drawable/button_bg_rounded_corners"/>
    </LinearLayout>
</RelativeLayout>