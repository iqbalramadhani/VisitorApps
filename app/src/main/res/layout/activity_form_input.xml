<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.visitor.FormInput">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tollbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:titleTextColor="@android:color/white"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_back"/>


    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tollbar"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:text="VISITOR APPS"
        android:textSize="16dp"
        android:textStyle="bold"
        android:textColor="@android:color/white" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FORM VISITOR IN"
        android:layout_marginTop="22dp"
        android:textSize="25dp"
        android:textStyle="bold"
        android:id="@+id/title"
        android:textAlignment="center"
        android:layout_below="@+id/tollbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:layout_below="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:id="@+id/no_id"
        android:layout_margin="20dp"
        >

        <EditText
            android:id="@+id/id_visitor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" NO ID VISITOR"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/nama_lengkap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" NAMA LENGKAP"

            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/instansi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=" INSTANTI"
            android:layout_marginBottom="15dp"/>

        <EditText
            android:id="@+id/keperluan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="KEPERLUAN" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        android:layout_gravity="bottom"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <Button
            android:id="@+id/submit"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_bg_rounded_corners"
            android:text="SUBMIT"
            android:textColor="@android:color/white"
            android:textStyle="bold" />


    </LinearLayout>



</RelativeLayout>